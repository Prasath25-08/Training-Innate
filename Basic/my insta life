import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s = new Scanner(System.in); 
        String name = s.nextLine().trim();
        int followers = s.nextInt ();
        int posts = s.nextInt();
        float usage = s.nextFloat(); 
        System.out.print("My name is "+name);
        System.out.print(", my Instagram has "+followers+" followers,");
        System.out.print(" I have posted "+posts+" posts,");
        System.out.print(" and I use Instagram for "+usage+" hours daily.");
        
        
    }
}
